# Microsemi I/O Physical Design Constraints file

# User I/O Constraints file 

# Family: PolarFire , Die: EVMPF300T , Package: 1FCG1152



# 
# User Locked I/O settings
# 


# -- User PushButtons I/O -- #

set_io -port_name {PUSH_BTN_1}  \
    -pin_name T4                \
    -fixed true                  \
    -io_std LVCMOS33        \
    -DIRECTION INPUT

set_io -port_name {PUSH_BTN_2}  \
    -pin_name Y8                 \
    -fixed true                  \
    -io_std LVCMOS33        \
    -DIRECTION INPUT
	
set_io -port_name {USER_RST}  \
    -pin_name T3                 \
    -fixed true                  \
    -io_std LVCMOS33        \
    -DIRECTION INPUT  


# -- LEDs I/O --#

set_io -port_name {LED_1}  \
    -pin_name U11                 \
    -fixed true                  \
    -io_std LVCMOS33        \
    -DIRECTION OUTPUT

set_io -port_name {LED_2}  \
    -pin_name T5                 \
    -fixed true                  \
    -io_std LVCMOS33        \
    -DIRECTION OUTPUT

set_io -port_name {LED_3}  \
    -pin_name W8                 \
    -fixed true                  \
    -io_std LVCMOS33        \
    -DIRECTION OUTPUT

set_io -port_name {LED_4}  \
    -pin_name W9                 \
    -fixed true                  \
    -io_std LVCMOS33        \
    -DIRECTION OUTPUT
  

# -- UART RX/TX -- #
    
set_io -port_name RX  \
    -pin_name U7            \
    -fixed true             \
    -io_std LVCMOS33        \
    -DIRECTION INPUT

set_io -port_name TX  \
    -pin_name V9            \
    -fixed true             \
    -io_std LVCMOS33        \
    -DIRECTION OUTPUT
	
	
